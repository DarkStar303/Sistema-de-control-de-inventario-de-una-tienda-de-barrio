<Window x:Class="archivos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:archivos"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">

            <Button Content="Cargar Imagen" Click="BtnCargarImagen_Click" Width="200" Height="40"/>
            <Button Content="Cargar PDF" Click="BtnCargarPDF_Click" Width="200" Height="40"/>
            <Button Content="Cargar Word" Click="BtnCargarWord_Click" Width="200" Height="40"/>
            <Button Content="Cargar GIF" Click="BtnCargarGIF_Click" Width="200" Height="40"/>

            <Border BorderBrush="Gray" BorderThickness="1" Margin="0,20,0,0" Padding="5">
                <ScrollViewer Height="300">
                    <StackPanel x:Name="VistaArchivos"></StackPanel>
                </ScrollViewer>
            </Border>
        </StackPanel>
    </Grid>
</Window>
